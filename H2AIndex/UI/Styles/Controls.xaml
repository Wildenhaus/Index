        <ResourceDictionary Source="/UI/Styles/Controls.CheckBox.xaml" />
        <ResourceDictionary Source="/UI/Styles/Controls.ComboBox.xaml" />
        <ResourceDictionary Source="/UI/Styles/Controls.GridSplitter.xaml" />
        <ResourceDictionary Source="/UI/Styles/Controls.GridView.xaml" />
        <ResourceDictionary Source="/UI/Styles/Controls.GroupBox.xaml" />
        <ResourceDictionary Source="/UI/Styles/Controls.Label.xaml" />
        <ResourceDictionary Source="/UI/Styles/Controls.ListView.xaml" />
        <ResourceDictionary Source="/UI/Styles/Controls.Menu.xaml" />
        <ResourceDictionary Source="/UI/Styles/Controls.ProgressBar.xaml" />
        <ResourceDictionary Source="/UI/Styles/Controls.ScrollBar.xaml" />
        <ResourceDictionary Source="/UI/Styles/Controls.ScrollViewer.xaml" />
        <ResourceDictionary Source="/UI/Styles/Controls.Slider.xaml" />
