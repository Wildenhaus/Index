<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="ProgressBar.Primary" Color="{DynamicResource Color.ColourfulGlyph.Static}" />
    <SolidColorBrush x:Key="ProgressBar.Primary.Opaque" Color="{DynamicResource Color.ColourfulGlyph.Static}" Opacity=".5" />

    <Style TargetType="{x:Type ProgressBar}">
        <Setter Property="Background" Value="#50000000" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{DynamicResource Color.ColourfulGlyph.Static.Opaque}" Offset="0.00" />
                    <GradientStop Color="{DynamicResource Color.ColourfulGlyph.Static}" Offset="0.55" />
                    <GradientStop Color="{DynamicResource Color.ColourfulGlyph.Static}" Offset="0.65" />
                    <GradientStop Color="{DynamicResource Color.ColourfulGlyph.Static.Opaque}" Offset="1.00" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>